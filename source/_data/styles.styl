// Custom styles for Chinese typography optimization
body {
  font-family: "PingFang SC", -apple-system, BlinkMacSystemFont, "Segoe UI", "Droid Sans", "Helvetica Neue", sans-serif;
  line-height: 1.8;
}

// Improve Chinese text readability
.post-body {
  line-height: 1.8;
  letter-spacing: 0.02em;
}

// Better spacing for headings
h1, h2, h3, h4, h5, h6 {
  margin: 1.5em 0 1em;
  line-height: 1.4;
}

// Enhanced blockquote styling
blockquote {
  border-left: 4px solid #f06292;
  background: #fafafa;
  padding: 16px 20px;
  margin: 1.5em 0;
  
  p {
    margin: 0.5em 0;
  }
}

// Improve code block readability
pre, code {
  font-family: "SF Mono", Monaco, "Inconsolata", "Fira Code", "Fira Mono", "Droid Sans Mono", "Source Code Pro", monospace;
}

// Better table styling
table {
  margin: 1.5em 0;
  border-collapse: collapse;
  width: 100%;
  
  th, td {
    border: 1px solid #ddd;
    padding: 8px 12px;
    text-align: left;
  }
  
  th {
    background-color: #f8f9fa;
    font-weight: 600;
  }
}
